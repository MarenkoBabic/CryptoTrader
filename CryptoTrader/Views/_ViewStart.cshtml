@{
    if( this.User.Identity.IsAuthenticated )
    {
        if( this.User.IsInRole( "Admin" ) )
        {
            Layout = "~/Views/Shared/LayoutAdmin.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/LayoutUser.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}