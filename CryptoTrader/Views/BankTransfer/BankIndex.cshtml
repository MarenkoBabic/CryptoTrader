@model CryptoTrader.Model.ViewModel.BankTransferViewModel
@{
    ViewBag.Title = "PayIn";
}

<div class="container">

    <div class="row">
        <!--KontoDaten-->
        <main class="col-lg-6 well" style="height:306px;">
            <h2>Kontodaten</h2>
            <div class="row">
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.BankName, "Bank")
                </div>
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.BankName, Model.BankName)
                </div>
            </div>

            <div class="row ">
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.ZipBank, "Postleitzahl")
                </div>
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.ZipBank, Model.ZipBank)
                </div>
            </div>

            <div class="row">
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.Bic, "BIC")
                </div>
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.Bic, Model.Bic)
                </div>
            </div>

            <div class="row">
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.Iban, "Kontonummer")
                </div>
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.Iban, Model.Iban)
                </div>
            </div>

            <div class="row">
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.FirstName, "Vorname")
                </div>
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.FirstName, Model.FirstName)
                </div>
            </div>

            <div class="row">
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.LastName, "Nachname")
                </div>
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.LastName, Model.LastName)
                </div>
            </div>

            <div class="row">
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.Reference, "Verwendungszweck")
                </div>
                <div class="col col-lg-6">
                    @Html.LabelFor(a => a.Reference, Model.Reference)
                </div>
            </div>

        </main>
        <!--EndKontoDaten-->
        <!--Diagramm-->
        <div class="col-lg-6">
            @Html.Partial("_PayOut")
        </div>
        <!--EndDiagramm-->
    </div>
    <div class="row">


        <div class="container" style="padding-left:0px;">
            <table class="table well">
                <thead>
                    <tr>
                        <th>Betrag</th>
                        <th>Währung</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.BankHistoryList)
                    {
                        <tr>
                            <td>@item.amount</td>
                            <td>@item.currency</td>
                            <td>@item.created</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>



