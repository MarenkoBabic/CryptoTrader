@{
    ViewBag.Title = "Home Page";
}
<script src="~/Scripts/highstock/Test/highstock.js"></script>
<script src="~/Scripts/highstock/2.1.8/themes/dark-unica.js"></script>
<style>
    .chartdiv {
        min-width: 100% !important;
    }

    .container {
        padding-top: 25px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <main id="Chart" class="chartdiv col-lg-12"></main>
    </div>
</div>


<script>
    $(document).ready(function () {
        UpdateChart();
    });

    function UpdateChart() {
        if ($("collapseExample").hasClass("in") == false) {
            $.ajax({
                url: '/Ticker/LoadChartData',
                success: function (json) {
                    CreateChart(json);
                },
                error: function (errorData) {
                    console.log(errorData);
                }
            });
            setTimeout(function () { UpdateChart(); }, 10000);

        }
    }

    function CreateChart(jsonData) {
        Highcharts.stockChart('Chart', {
            title: {
                text: 'Aktueller BitCoin Kurs'
            },
            rangeSelector: false,
            series: [{
                name: 'BTC/EUR',
                data: jsonData,
                //type: 'area',
                tooltip: {
                    valueDecimals: 2
                }
            }],
        });
    }

</script>
