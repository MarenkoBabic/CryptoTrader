<div class="modal fade" id="Login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myModalLabel">Log in</h4>
            </div>
            <div class="modal-body">
                @using( Html.BeginForm( "Login", "Login", FormMethod.Post ) )
                {

                    <div class="input-group">
                        @Html.ValidationMessage( "LogOnError" )

                        @Html.EditorFor( a => a.Email, new { htmlAttributes = new { @class = "form-control" } } )
                        @Html.ValidationMessageFor( a => a.Email, null, new { @class = "text-danger", } )
                        <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>
                    </div>

                    <div class="input-group">
                        @Html.EditorFor( a => a.Password, new { htmlAttributes = new { @class = "form-control" } } )
                        @Html.ValidationMessageFor( a => a.Password, null, new { @class = "text-danger", } )

                        <label for="uPassword" class="input-group-addon glyphicon glyphicon-lock"></label>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Angemeldet bleiben
                        </label>
                    </div>
                }

            </div>
            <div class="modal-footer">
                <button type="submit" class="form-control btn btn-primary">Ok</button>
                <div class="progress">
                    <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="100" style="width: 0%;">
                        <span class="sr-only">progress</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

