@model CryptoTrader.Model.ViewModel.SellBitCoinViewModel
@{
    ViewBag.Title = "BuyBitCoin";
}

<h2>BuyBitCoin</h2>

@using (Html.BeginForm("BuyBitCoin", "Trade", new { id = 1 }))
{
    @Html.LabelFor(a => a.TradeAmount, "Bitcoin kaufen")
    @Html.EditorFor(a => a.TradeAmount)
    <input type="submit" value="Kaufen" />
}

@using (Html.BeginForm("BuyBitCoin", "Trade", new { id = 3 }))
{
    @Html.LabelFor(a => a.TradeAmount, "Per Euro Bitcoin kaufen")
    @Html.EditorFor(a => a.TradeAmount)
    <input type="submit" value="Kaufen" />
}
@if (Model.HistoryList.Count < 0)
{
    foreach (var item in Model.HistoryList)
    {
        @item.person_id
        @item.ticker_id
        @item.Person.firstName
        @item.Person.lastName
        @item.amount

    }
}
