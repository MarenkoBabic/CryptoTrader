@model CryptoTrader.Model.ViewModel.BuyBitCoinViewModel
<div>
    @using (Html.BeginForm("Trade", "Trade", FormMethod.Post))
    {
        <div class="row">
            <div class="col-lg-12">
                @Html.LabelFor(a => a.BuyTradeAmountBTC, "Bitcoin", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @Html.EditorFor(a => a.BuyTradeAmountBTC, new { htmlAttributes = new { id = "BTC", @class = "form-control" } })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @Html.LabelFor(a => a.BuyTradeAmountEuro, "Euro")
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @Html.EditorFor(a => a.BuyTradeAmountEuro, new { htmlAttributes = new { @class = "form-control", id = "Euro" } })
            </div>
        </div>
        <input type="submit" name="submit" class="btn btn-success" value="Kaufen" style="width:100%;">

    }

</div>

<script type="text/javascript">

    $("#BTC").keyup(function () {
        $.ajax({
            url: "Trade/GetEuro",
            type: 'POST',
            data: {
                TradeAmountBTC: $("#BTC").val(),
            },
            success: function (data) {
                $("#Euro").val(data);
            }
        });
    });

    $("#Euro").keyup(function () {
        $.ajax({
            url: "Trade/GetBTC",
            type: 'POST',
            data: {
                TradeAmountEuro: $("#Euro").val()
            },
            success: function (data) {
                $("#BTC").val(data);
            }
        });
    });

</script>