@model CryptoTrader.Model.ViewModel.SellBitCoinViewModel
@{
    ViewBag.Title = "SellBitCoin";
}

<h2>SellBitCoin</h2>

@using (Html.BeginForm("SellBitCoin", "Trade", new { id = 1 }))
{
    @Html.LabelFor(a => a.TradeAmount, "Bitcoin verkaufen")
    @Html.EditorFor(a => a.TradeAmount)
    <input type="submit" value="Kaufen" />
}
@using (Html.BeginForm("SellBitCoin", "Trade", new { id = 2 }))
{
    @Html.LabelFor(a => a.EuroAmount, "Per Euro Bitcoin verkaufen")
    @Html.EditorFor(a => a.EuroAmount)
    <input type="submit" value="Kaufen" />
}


