@model CryptoTrader.Model.ViewModel.TradeByEuroViewModel

@using (Html.BeginForm("TradeByEuro", "Trade", FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-12">
            @Html.LabelFor(a => a.TradeAmountBTC, "Bitcoin", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Html.EditorFor(a => a.TradeAmountBTC, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.TradeAmountBTC, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Html.LabelFor(a => a.TradeAmountEuro, "Euro")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Html.EditorFor(a => a.TradeAmountEuro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.TradeAmountEuro, "", new { @class = "text-danger" })
        </div>
    </div>
    <input type="submit" name="submit" class="btn btn-danger" value="Verkaufen" style="width:100%;">

}
