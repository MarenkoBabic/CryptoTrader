@model CryptoTrader.Models.ViewModel.ApiViewModel


<div class="divPartial">
    @Html.LabelFor( a => a.TickerC)
</div>


<script>
    $.ajax({
    url: '@Url.Action("Test", "Home")',
    type: 'post',
    cache: false,
    async: true,
    data: { id: "frmUser" },
    success: function(result){
        $('.divPartial').html(result);
    }
    });

    $(document).ready(function () {
        function RefreshPartial() {
            //this will wait 3 seconds and then fire the load partial function
            setTimeout(function () {
                loadPartialView();
                //recall this function so that it will continue to loop
                RefreshPartial();
            }, 3000);
        }
        //initialize the loop
        RefreshPartial();
    }); 
</script>